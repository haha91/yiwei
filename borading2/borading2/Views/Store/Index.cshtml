@model IEnumerable<borading2.Models.StoreViewModel>
<script src="~/Scripts/storeFunction.js"></script>
<p>
    <button type="button" class="store-create" id="store_create_button" onclick="openCreate()"
            data-target="#store-create-box">
        Create
    </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <button type="button" class="store-edit" id="store_edit_button" onclick="openModal(@item.Id)"
                        data-target="#store-edit-box">
                    Edit
                </button>
                <button type="button" class="store-delete" id="store_detele_button" onclick="openDelete(@item.Id)"
                        data-target="#store-delete-box">
                    Delete
                </button>
            </td>
        </tr>
    }

</table>

<div id="store-edit-box" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!--model content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit</h4>
            </div>
            <div class="modal-body">
                <p class="hidden"><input id="store-edit-id" /></p>
                <p>Name: <input id="store-edit-name-value" class="name-value" /></p>
                <p>Address: <input id="store-edit-address-value" class="address-value" /></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="store-save btn btn-default" onclick="storeSave()">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div><!--end footer-->

        </div><!--end content-->
    </div><!--end dialog-->

</div><!--end box-->


<div id="store-create-box" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!--model content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit</h4>
            </div>
            <div class="modal-body">
                <p>Name: <input id="store-create-name-value" class="name-value" /></p>
                <p>Address: <input id="store-create-address-value" class="address-value" /></p>
            </div>
            <div class="modal-footer">
                <button type="button" id="store-create" class=" btn btn-default" onclick="storeCreate()">Create</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div><!--end footer-->

        </div><!--end content-->
    </div><!--end dialog-->

</div><!--end box-->


<div id="store-delete-box" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!--model content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="removeAppend()" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                <p><input id="store-delete-Id" class="hidden" /></p>
                <p id="store-delete-info"></p>

            </div>
            <div class="modal-footer">
                <button type="button" id="store-delete" class=" btn btn-default" onclick="storeDelete()">Delete</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="removeAppend()">Close</button>
            </div><!--end footer-->

        </div><!--end content-->
    </div><!--end dialog-->

</div><!--end box-->
