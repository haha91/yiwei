@model IEnumerable<borading2.Models.CustomerViewModel>
<script src="~/Scripts/customerFunction.js"></script>
<p>
    <button type="button" class="customer-create" id="cutomer_create_button" onclick="openCreate()"
            data-target="#customer-create-box">
        Create
    </button>
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <button type="button" class="customer-edit" id="cutomer_edit_button" onclick="openModal(@item.Id)"
                        data-target="#customer-edit-box">
                    Edit
                </button>
                <button type="button" class="customer-delete" id="customer_detele_button" onclick="openDelete(@item.Id)"
                        data-target="#customer-delete-box">Delete</button>
            </td>
        </tr>
    }

</table>

<div id="customer-edit-box" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!--model content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit</h4>
            </div>
            <div class="modal-body">
                <p class="hidden"><input id="customer-edit-id" /></p>
                <p>Name: <input id="customer-edit-name-value" class="name-value" /></p>
                <p>Address: <input id="customer-edit-address-value" class="address-value" /></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="customer-save btn btn-default" onclick="customerSave()">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div><!--end footer-->

        </div><!--end content-->
    </div><!--end dialog-->

</div><!--end box-->


<div id="customer-create-box" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!--model content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit</h4>
            </div>
            <div class="modal-body">
                <p>Name: <input id="customer-create-name-value" class="name-value" /></p>
                <p>Address: <input id="customer-create-address-value" class="address-value" /></p>
            </div>
            <div class="modal-footer">
                <button type="button" id="customer-create" class=" btn btn-default" onclick="customerCreate()">Create</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div><!--end footer-->

        </div><!--end content-->
    </div><!--end dialog-->

</div><!--end box-->


<div id="customer-delete-box" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!--model content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="removeAppend()" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                <p><input id="customer-delete-Id" class="hidden"/></p>
                <p id="customer-delete-info"></p>
                
            </div>
            <div class="modal-footer">
                <button type="button" id="customer-delete" class=" btn btn-default" onclick="customerDelete()">Delete</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="removeAppend()">Close</button>
            </div><!--end footer-->

        </div><!--end content-->
    </div><!--end dialog-->

</div><!--end box-->